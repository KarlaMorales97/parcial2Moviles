<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="11dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.morales.parcial2moviles.News.See_Details_GameNews"
    tools:showIn="@layout/activity_see__details__game_news">


    <ImageView
        android:id="@+id/See_Image"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="#000"
        android:layout_gravity="center"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">

        <TextView
            android:id="@+id/See_Titulo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Titulo"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#b7228d"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/See_Game"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Game"
            android:textColor="#b4408f"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="20dp"/>
         <TextView
             android:id="@+id/See_Body"
             android:background="#f5d2ea"
             android:layout_marginTop="15dp"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginRight="15dp"
             android:layout_marginLeft="15dp"
             android:textAlignment="center"
             android:text=" Body "
             android:textColor="#b4408f"
             android:textSize="20dp"/>
         <TextView
             android:id="@+id/See_Fecha"
             android:layout_marginTop="50dp"
             android:layout_marginLeft="150dp"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="Fecha"
             android:textColor="#171c60"
             android:layout_gravity="right"
             android:layout_marginRight="30dp"
             android:textSize="20dp"/>




     </LinearLayout>

    </ScrollView>


</LinearLayout>
